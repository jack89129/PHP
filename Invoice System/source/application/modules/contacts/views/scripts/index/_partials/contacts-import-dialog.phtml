<script type="text/javascript">

    $(document).ready(function(){
        $('#contacts-import-form input[type=file]').change(function(){
            $.post( baseUrl + '/contacts/index/validate-file', {filename:$(this).val()}).error(function(){
                setTimeout( function(){$('#contacts-import-form input[type=submit]').attr('disabled', 'disabled').css('opacity', '0.5');}, 0);
            }).success(function(){
                $('#contacts-import-form input[type=submit]').removeAttr('disabled').css('opacity', '1');
            });
        });
    });

</script>