<div style="display: none;">
    <div class="opslaan-Box overlaybox" id="contacts-import-dialog">
        <form id="contacts-import-form" action="<?= $this->baseUrl() . '/contacts/index/import-contacts'; ?>" enctype="multipart/form-data" method="post">
            <fieldset>
                <div class="opslaan selected">
                    <div class="right">

                        <h3><?= _t('Import contacten') ?></h3>

                        <div>
                            <div class="center">
                                <label><?= _t('File') ?>:</label> <input type="file" name="file" class="field" value="" />
